    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (release with debug info)",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}/bin/RelWithDebInfo/",
            "program": "${workspaceRoot}/bin/RelWithDebInfo/launcher.exe",
            "externalConsole": true,
            "preLaunchTask": "CMake: build"
        }, {
            "name": "Launch (release)",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}/bin/Release/",
            "program": "${workspaceRoot}/bin/Release/launcher.exe",
            "externalConsole": true,
            "preLaunchTask": "CMake: build"
        },
    ]
}